<!doctype html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#2f8f6d" />
  <meta name="description" content="KC Schaf Zeilsheim - Vereinsportal für Kegelclub-Verwaltung" />
  <title>KC Schaf Zeilsheim</title>
  <link rel="stylesheet" href="/style.css" />
  <script defer src="/app.js"></script>
</head>
<body>
  <div class="background-glow"></div>

  <!-- Toast container for notifications -->
  <div id="toastContainer" class="toast-container"></div>

  <!-- Flash message data for JavaScript -->
  <% if (flash) { %>
    <script type="application/json" id="flashData"><%= JSON.stringify(flash) %></script>
  <% } %>

  <header class="topbar">
    <div class="brand">
      <img src="/sheep.jpg" alt="KC Schaf Maskottchen" class="brand-mascot" />
      <div>
        <strong>KC Schaf Zeilsheim</strong>
        <small>Vereinsportal</small>
      </div>
    </div>

    <% if (currentUser) { %>
      <!-- Desktop navigation -->
      <nav class="nav-links">
        <a href="/kegelkladde">Kegelkladde</a>
        <a href="/statistik">Statistik</a>
        <a href="/members">Mitglieder</a>
        <a href="/ranglisten">Ranglisten</a>
        <a href="/kurioses">Kurioses</a>
      </nav>

      <!-- Desktop logout -->
      <form method="post" action="/logout" class="logout-form">
        <input type="hidden" name="csrfToken" value="<%= csrfToken %>" />
        <button type="submit">Logout</button>
      </form>

      <!-- Mobile menu toggle -->
      <button id="menuToggle" class="menu-toggle" aria-label="Menü öffnen">
        <span></span>
        <span></span>
        <span></span>
      </button>
    <% } %>
  </header>

  <% if (currentUser) { %>
    <!-- Mobile navigation -->
    <nav id="mobileNav" class="mobile-nav">
      <a href="/kegelkladde">Kegelkladde</a>
      <a href="/statistik">Statistik</a>
      <a href="/members">Mitglieder</a>
      <a href="/ranglisten">Ranglisten</a>
      <a href="/kurioses">Kurioses</a>
      <form method="post" action="/logout" style="margin-top: 0.5rem;">
        <input type="hidden" name="csrfToken" value="<%= csrfToken %>" />
        <button type="submit" style="width: 100%;">Logout (<%= currentUser.firstName %>)</button>
      </form>
    </nav>
  <% } %>

  <main class="page-shell">
